#!/bin/bash

COMMIT_MSG_FILE=$1
COMMIT_MSG=$(cat "$COMMIT_MSG_FILE")


if ! echo "$COMMIT_MSG" | grep -q "^[A-Z]"; then
    echo "Error: Commit message must start with a capital letter."
    exit 1
fi


if command -v aspell &> /dev/null; then
    SPELL_CHECKER="aspell list"
elif command -v hunspell &> /dev/null; then
    SPELL_CHECKER="hunspell -l"
else
    echo "Warning: No spell checker found. Skipping spell check."
    exit 0
fi


SPELL_ERRORS=$(echo "$COMMIT_MSG" | $SPELL_CHECKER)

if [ ! -z "$SPELL_ERRORS" ]; then
    echo "Error: Commit message contains spelling errors:"
    echo "$SPELL_ERRORS"
    exit 1
fi

exit 0
