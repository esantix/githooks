#!/bin/bash

COMMIT_MSG_FILE=$1
COMMIT_MSG=$(cat "$COMMIT_MSG_FILE")


YELLOW='\033[0;33m'
RED='\033[0;31m'
NC='\033[0m'


if command -v aspell &> /dev/null; then
    SPELL_CHECKER="aspell list --ignore 1 --pattern '[A-Z][a-zA-Z]*'"
else
    echo -e "${YELLOW}Warning: No spell checker found. Skipping spell check.${NC}"
    exit 0
fi


SPELL_ERRORS=$(echo "$COMMIT_MSG" | $SPELL_CHECKER)

if [ ! -z "$SPELL_ERRORS" ]; then
    echo -e "${RED}Error: Commit message contains spelling errors:${NC}"
    echo "$SPELL_ERRORS"
    exit 1
fi

exit 0
